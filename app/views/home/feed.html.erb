<div class = "main_container">
    
<h1>ToastPosts Feed</h1>
<p>Welcome to Our Feed Page</p>

  <%= content_tag :h3, "Logged in as:" %>
  <%= content_tag :h3, @currentuser.username %>

    <%=content_tag :h1, "Current Members:"%>
    
    <% @users.each do |u| %>
        <%= link_to u.username, user_path(u) %>
    <% end %>

<div id ="post_form">
     <%= content_tag :h3, 'Create a new post:' %>
     <%= form_for @post, url: posts_path, html: {method: :post} do |f| %>
        <%=f.label :title %>
    <br>
        <%=f.text_area :title %>  
  <br>
        <%=f.label :content %>
    <br>
        <%=f.text_area :p_content %>  
        <%=f.submit :create %>
    <% end %>
</div>


<div id = "posts">
    <% @posts.reverse.each do |p| %>
        <%= content_tag :h4, p.title %>
 	          <%= content_tag :h5, usernamefun(p) %>
	       <%= content_tag :h5, p.p_content %>
	       <!-- comment form embedded in post. -->
	       <!-- comment loop -->
				<%= content_tag :h3, "The Comments:" %>
	       		<%p.comments.each do |c| %>
		          <%= content_tag :h6, c.c_content %>
		       <% end %>
        <%= link_to "Reply", post_path(p) %> 
    <% end %>
</div>


<div id = "sign_out">
     <%= form_tag("/sign_out", method: "get") do %>
    <br><br><br><br><br><br><br><br>
        <%=submit_tag("Sign Out") %>
     <% end %>
</div>
    
</div>